              <span class="card-body"><%= element.ano %></span>
            <p class="card-body"><%= element.desc_short %></p>
          </div>
          <div id="bottons">  
            <a href="/deletar/<%= element.id %>">
            <button type="button" class="btn-delete">Delete</button>
    </a>
    </div>
            
          </a>
           </div>

          </div>
          
          <% }) %>
        </section>
      </section>
    </main>
    <%- include('./partials/footer') %>
  </body>
</html>
